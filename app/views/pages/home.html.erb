    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-12 col-sm-6 text-center">
          <div class="post-card">
            <div class="post-head">

                <h3><%= post.title %></h3>
                <h5><%= post.created_at.strftime('%b %d, %Y') %></h5>

            </div>

            <div class="post-body">
