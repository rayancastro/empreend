<div class="container-fluid">
  <h2 class="second-header">Mais artigos</h2>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12 col-sm-6 text-center">
        <%= link_to post_path(display_url: post.display_url) do %>
          <div class="post-card">
            <div class="card-image" style="background-image: url(<%= post.primary_photo.url %>) !important;"></div>
            <div class="card-content">
              <p class="post-author"><%= post.user.first_name %> | <%= post.created_at.strftime('%b %d, %Y') %></p>
              <h3 class="post-title"><%= post.title %></h3>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
