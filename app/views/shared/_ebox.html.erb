  <div id="ebook-box" class="">
    <div class="ebook-info text-center">
      <h2>BAIXE AQUI o nosso ebook: "Decole como MEI em 2019"</h2>
      <p>Gratuito at√© 15/02/19</p>
    </div>
    <div class="form-box">
      <%= form_for(@lead) do |f| %>
        <div class="row">

          <div class="col-12 col-md-6 col-lg-3">
            <div class="form-group">
                <%= f.text_field :nome, class: 'form-control field', placeholder: 'Nome' %>
            </div>
          </div>

          <div class="col-12 col-md-6 col-lg-3">
            <div class="form-group">
                <%= f.text_field :sobrenome, class: 'form-control field', placeholder: 'Sobrenome' %>
            </div>
          </div>

          <div class="col-12 col-md-6 col-lg-2">
            <div class="form-group">

                <%= f.text_field :email, class: 'form-control field', placeholder: 'Email' %>
            </div>
          </div>

          <div class="col-12 col-md-6 col-lg-2">
              <div class="input-group mb-3">
                <select name="lead[tipo]" id="lead_tipo" class="custom-select">
                  <option value="B2C">Quero Empreender</option>
                  <option value="B2B">Sou Empreendedor</option>
                </select>
              </div>
          </div>
          <%= f.hidden_field :ip, class: 'form-control', value: request.remote_ip %>

          <div class="col-12 col-md-6 col-md-offset-3  col-lg-2">
            <input type="submit" name="commit" value="Baixar e-book" class="btn btn-secondary" data-dismiss="modal" data-disable-with="Validando">
          </div>
        </div>
      <% end %>
    </div>
  </div>
