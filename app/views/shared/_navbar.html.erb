         <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
          <!-- Login / Logout links -->
             <% if user_signed_in? %>
                <%= link_to "PAINEL ADMIN", admin_path, class: "dropdown-item" if current_user.admin? %>
